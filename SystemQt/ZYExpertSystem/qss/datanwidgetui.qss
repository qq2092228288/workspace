QWidget {
    font-family: 'Microsoft YaHei';
}

QPushButton {
    background-color: #ffffff;
    border: 1px solid #dcdfe6;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 5px;
    font-size: 16px;
    font-weight: normal;
    color: #000000;
}

QPushButton:hover {
    background-color: #ecf5ff;
    color: #409eff;
}

QPushButton:pressed, QPushButton:checked {
    border: 1px solid #3a8ee6;
    color: #409eff;
}

